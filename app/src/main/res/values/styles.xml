<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DartActionBarAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SignUpTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLabel" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">#8c8c8c</item>
        <item name="colorControlActivated">#737373</item>
        <item name="colorControlHighlight">#737373</item>
        <item name="android:textSize">12sp</item>
        <item name="android:labelTextSize">9sp</item>
    </style>

    <style name="FormTextLabel" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">#404040</item>
        <item name="colorControlActivated">#333333</item>
        <item name="colorControlHighlight">#333333</item>
        <item name="android:textSize">12sp</item>
        <item name="android:labelTextSize">9sp</item>
    </style>

    <style name="Autocomplete">
        <item name="colorControlNormal">#8c8c8c</item>
        <item name="colorControlActivated">#bfbfbf</item>
    </style>

    <style name="RadioButtonStyle" parent="AppTheme">
        <item name="colorControlNormal">#404040</item>
        <item name="colorAccent">#3AB05A</item>
        <item name="android:textColorSecondary">@color/radio_text_color</item>
    </style>

    <style name="MySwitchStyle" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#666666</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#666666</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


</resources>
