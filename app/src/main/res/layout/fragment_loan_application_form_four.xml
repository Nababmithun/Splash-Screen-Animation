<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_fragment_four"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="true"
            android:paddingBottom="@dimen/scroll_view_bottom_padding">

            <include android:id="@+id/container_native_citizen_final"
                layout="@layout/container_native_citizen_final_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <include android:id="@+id/container_expatriate_citizen_final"
                layout="@layout/container_expatriate_citizen_final_page"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
